<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">

            <LinearLayout
                style="@style/OuterSearchCard"
                android:layout_marginBottom="13dp"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp"
                >

                <ImageView
                    style="@style/WhiteIcon"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Title3"
                            android:layout_weight="1"
                            android:text="Минск" />

                        <ImageView
                            style="@style/WhiteIcon"
                            android:layout_gravity="center"
                            android:src="@drawable/swap" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/grey5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Title3"
                            android:layout_weight="1"
                            android:text="Сочи" />

                        <ImageView
                            style="@style/WhiteIcon"
                            android:layout_gravity="center"
                            android:src="@drawable/cross" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    style="@style/TagButton">
                    <TextView
                        style="@style/Grey7IconTitle4Italic"
                        android:text="@string/back"
                        android:drawableStart="@drawable/plus"
                        android:drawablePadding="6dp"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/TagButton">
                    <TextView
                        style="@style/Title4Italic"
                        android:text="24 фев, "/>
                    <TextView
                        style="@style/Title4Italic"
                        android:textColor="@color/grey6"
                        android:text="сб"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/TagButton">
                    <TextView
                        style="@style/Grey5IconTitle4Italic"
                        android:text="1, эконом"
                        android:drawableStart="@drawable/passenger"
                        android:drawablePadding="6dp"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/TagButton"
                    android:layout_marginEnd="0dp">
                    <TextView
                        style="@style/WhiteIconTitle4Italic"
                        android:text="@string/filter"
                        android:drawableStart="@drawable/filter"
                        android:drawablePadding="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/OuterSearchCard"
                android:layout_marginBottom="23dp"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="6dp"
                >
                <TextView
                    style="@style/Title2"
                    android:text="@string/straight_rails"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Circle24"
                        android:backgroundTint="@color/red"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/Title4Italic"
                                android:layout_weight="1"
                                android:text="Уральские авиалинии"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:text="2 390 ₽"
                                style="@style/Title4Italic"
                                android:textColor="@color/blue"
                                android:drawableEnd="@drawable/to"
                                android:drawablePadding="4dp"/>
                        </LinearLayout>

                        <TextView
                            style="@style/Text2"
                            android:text="07:00  09:10   10:00  11:00  12:00  13:00  12:00"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey4"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Circle24"
                        android:backgroundTint="@color/blue"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/Title4Italic"
                                android:layout_weight="1"
                                android:text="Победа"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:text="2 390 ₽"
                                style="@style/Title4Italic"
                                android:textColor="@color/blue"
                                android:drawableEnd="@drawable/to"
                                android:drawablePadding="4dp"/>
                        </LinearLayout>

                        <TextView
                            style="@style/Text2"
                            android:text="08:05  09:55   16:35  18:55"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey4"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Circle24"
                        android:backgroundTint="@color/white"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/Title4Italic"
                                android:layout_weight="1"
                                android:text="NordStar"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:text="2 390 ₽"
                                style="@style/Title4Italic"
                                android:textColor="@color/blue"
                                android:drawableEnd="@drawable/to"
                                android:drawablePadding="4dp"/>
                        </LinearLayout>

                        <TextView
                            style="@style/Text2"
                            android:text="13:10"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey4"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    style="@style/ButtonText1"
                    android:text="@string/show_all"
                    android:layout_height="42dp"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                style="@style/ButtonText1"
                android:text="@string/view_all_tickets"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="italic"
                android:backgroundTint="@color/blue"
                android:background="@drawable/circle_8dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>