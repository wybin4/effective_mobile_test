<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">

            <TextView
                style="@style/Title1"
                android:text="@string/h1_air_tickets"
                android:layout_gravity="center"
                android:layout_marginBottom="36dp" />

            <LinearLayout
                style="@style/OuterSearchCard"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="4dp"
                app:cardMaxElevation="4dp"
                android:layout_marginBottom="35dp">

                <LinearLayout
                    style="@style/InnerSearchCard"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="18dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:elevation="4dp"
                    app:cardMaxElevation="4dp">

                    <ImageView
                        style="@style/WhiteIcon"
                        android:src="@drawable/search"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <com.google.android.material.textfield.TextInputEditText
                           style="@style/Title3"
                           android:text="Минск"
                           android:hint="Откуда - Москва"
                           android:background="@null"/>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/grey5"
                           android:layout_marginVertical="8dp"/>

                       <TextView
                           style="@style/Title3"
                           android:hint="Куда - Турция"/>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>

            <TextView
                style="@style/Title1"
                android:layout_width="match_parent"
                android:text="@string/h2_air_tickets"
                android:layout_marginBottom="19dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="67dp">

                 <androidx.cardview.widget.CardView
                     android:layout_width="132dp"
                     android:layout_height="132dp"
                     app:cardCornerRadius="16dp"
                     android:layout_marginBottom="4dp">
                     <ImageView
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/air_tickets_pic_1"
                         />
                 </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/Text1"
                    android:text="Die Antwoord"
                    android:layout_marginBottom="1dp"/>

                <TextView
                    style="@style/Text2"
                    android:text="Будапешт"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    style="@style/Text2"
                    android:text="от 22 264 ₽"
                    app:drawableStartCompat="@drawable/air_tickets"
                    app:drawableTint="@color/grey6" />

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>