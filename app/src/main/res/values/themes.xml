<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Airtickets" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title1" parent="Text">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="Title2" parent="Text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="Title3" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColorHint">@color/grey6</item>
    </style>

    <style name="Title4" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="Title4Italic" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular_italic</item>
    </style>

    <style name="Text1" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="Text2" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="ButtonText1" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="TabText" parent="Text">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InnerSearchCard" parent="Card">
        <item name="android:backgroundTint">@color/grey4</item>
        <item name="android:background">@drawable/circle_16dp</item>
    </style>

    <style name="OuterSearchCard" parent="Card">
        <item name="android:backgroundTint">@color/grey3</item>
        <item name="android:background">@drawable/circle_16dp</item>
    </style>

    <style name="TicketCard" parent="Card">
        <item name="android:backgroundTint">@color/grey1</item>
        <item name="android:background">@drawable/circle_8dp</item>
    </style>

    <style name="WhiteIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="WhiteIconTitle3" parent="Title3">
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="WhiteIconTitle4Italic" parent="Title4Italic">
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="WhiteIconTitle4" parent="Title4">
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="Grey7IconTitle4Italic" parent="Title4Italic">
        <item name="android:drawableTint">@color/grey7</item>
    </style>

    <style name="Grey5IconTitle4Italic" parent="Title4Italic">
        <item name="android:drawableTint">@color/grey5</item>
    </style>

    <style name="BottomSheetDialog">
        <item name="android:background">@drawable/bottom_dialog_night</item>
    </style>

    <style name="BottomSheetLabel">
        <item name="android:backgroundTint">@color/grey5</item>
    </style>

    <style name="TagButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/circle_50dp</item>
        <item name="android:backgroundTint">@color/grey3</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Circle24">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/circle_50dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="elevation">0dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/white</item>
    </style>

</resources>